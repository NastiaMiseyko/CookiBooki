<% include ./partials/header %>

<div id="bg">
		<h1>CookiBooki</h1>
		<hr>
		<h3>The platform for searching recipes</h3>
	</div>
	
	<div class="line container">
		<hr>
	</div>

	<div class="container-fluid">
		<div class="row">
            
                <% recipes.forEach(function(recipe){ %>
                    <div class="col-lg-3 col-sm-6">
                            <div class="img-thumbnail" id=" <%= recipe.id %>">
                                <img class="recipe"  src="<%= recipe.image %>"  alt="">
								<%= recipe.title %>
								<a href="/recipes/<%= recipe._id %>">Learn more</a>
                            </div>
                        </div>

                <% }); %>

		</div>
	</div>	



<% include ./partials/footer %>